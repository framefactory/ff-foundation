{
    "name": "ff-foundation",
    "version": "1.0.0",
    "description": "FF Typescript Foundation Library",
    "scripts": {
        "start": "npm run server",
        "server": "tsc -b source/server; nodemon services/server/bin/index.js",
        "dev": "tsc -b source/server; concurrently \"cd source/client && webpack --color -w --mode=development --component=all\" \"tsc -b -w source/server\" \"nodemon services/server/bin/index.js\"",
        "dev:component": "tsc -b source/server; concurrently \"cd source/client && webpack --color -w --mode=development --component=$WATCH_COMPONENT\" \"tsc -b -w source/server\" \"nodemon services/server/bin/index.js\"",
        "build": "concurrently \"npm run build:client\" \"npm run build:server\"",
        "build:server": "tsc -b source/server",
        "build:client": "cd source/client; webpack --color --component=all; cd ../..",
        "build:client:prod": "cd source/client; webpack --color --mode=production --component=all; cd ../..",
        "build:client:dev": "cd source/client; webpack --color --mode=development --component=all; cd ../..",
        "build:libs": "tsc -b libs",
        "clean": "rm -rf services/server/bin && rm -rf services/server/public/built",
        "clean:libs": "rm -rf libs/*/built",
        "test:libs": "npm run test:core; npm run test:graph",
        "test:core": "tsc -b libs/ff-core/tsconfig.test.json && mocha -c --ui tdd libs/ff-core/built/test/test.js || exit 0",
        "test:graph": "tsc -b libs/ff-graph/tsconfig.test.json && mocha -c --ui tdd libs/ff-graph/built/test/test.js || exit 0",
        "doc": "typedoc --name \"FF Foundation Library\" --exclude \"**/node_modules/**\" --ignoreCompilerErrors --mode file --target ES6 --theme minimal --out doc/code/ source/",
        "up": "bash -c 'WATCH_COMPONENT=${0/#bash/all} NPM_SCRIPT=dev:component docker-compose up -d; docker-compose logs -f'",
        "down": "docker-compose stop; docker-compose rm -f -v",
        "restart": "npm run down; npm run up",
        "install": "docker-compose exec server npm install",
        "bash": "docker-compose exec server bash"
    },
    "nodemonConfig": {
        "delay": 500,
        "watch": [
            "services/server/bin"
        ]
    },
    "_moduleAliases": {
        "@ff/core": "@framefactory/core"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/framefactory/ff-foundation.git"
    },
    "keywords": [
        "typescript",
        "react",
        "webcomponents"
    ],
    "contributors": [
        {
            "name": "Ralph Wiedemeier",
            "url": "https://github.com/framefactory"
        }
    ],
    "license": "MIT",
    "private": true,
    "bugs": {
        "url": "https://github.com/framefactory/ff-foundation/issues"
    },
    "homepage": "https://github.com/framefactory/ff-foundation#readme",
    "dependencies": {
        "@framefactory/browser": "file:libs/browser",
        "@framefactory/core": "file:libs/core",
        "@framefactory/graph": "file:libs/graph",
        "@framefactory/react": "file:libs/react",
        "@framefactory/scene": "file:libs/scene",
        "@framefactory/three": "file:libs/three",
        "@framefactory/two": "file:libs/two",
        "@framefactory/ui": "file:libs/ui",
        "lit-element": "^2.4.0",
        "lit-html": "^1.3.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "resolve-pathname": "^3.0.0",
        "three": "^0.125.1",
        "xml-js": "^1.6.11"
    },
    "devDependencies": {
        "@types/chai": "^4.2.14",
        "@types/mocha": "^8.2.0",
        "@types/node": "^14.14.22",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@typescript-eslint/eslint-plugin": "^4.13.0",
        "@typescript-eslint/parser": "^4.13.0",
        "chai": "^4.2.0",
        "child_process": "^1.0.2",
        "concurrently": "^5.3.0",
        "css-loader": "^5.0.1",
        "dotenv": "^8.2.0",
        "eslint": "^7.17.0",
        "eslint-config-prettier": "^7.1.0",
        "express": "^4.17.1",
        "handlebars": "^4.7.6",
        "handlebars-loader": "^1.7.1",
        "html-webpack-plugin": "^4.5.1",
        "mini-css-extract-plugin": "^1.3.5",
        "mkdirp": "^1.0.4",
        "mocha": "^8.2.1",
        "module-alias": "^2.2.2",
        "morgan": "^1.10.0",
        "node-sass": "^5.0.0",
        "nodemon": "^2.0.7",
        "optimize-css-assets-webpack-plugin": "^5.0.4",
        "prettier": "^2.2.1",
        "raw-loader": "^4.0.2",
        "sass-loader": "^10.1.1",
        "source-map-loader": "^2.0.0",
        "style-loader": "^2.0.0",
        "terser-webpack-plugin": "^5.1.1",
        "ts-loader": "^8.0.14",
        "typescript": "^4.1.3",
        "webpack": "^5.18.0",
        "webpack-cli": "3.3.12"
    }
}
