{
    "name": "ff-foundation",
    "version": "0.1.0",
    "description": "FF Typescript Foundation Library",
    "scripts": {
        "start": "npm run server",
        "server": "nodemon services/server/bin/index.js",
        "watch": "npm run watch-transition",
        "watch-all": "concurrently \"cd source/client && webpack --watch --app=all\" \"tsc -b source/server -w\" \"nodemon services/server/bin/index.js\"",
        "watch-editor": "concurrently \"cd source/client && webpack --watch --app=editor\" \"tsc -b source/server -w\" \"nodemon services/server/bin/index.js\"",
        "watch-components": "concurrently \"cd source/client && webpack --watch --app=components\" \"tsc -b libs -w\" \"tsc -b source/server -w\" \"nodemon services/server/bin/index.js\"",
        "watch-transition": "concurrently \"cd source/client && webpack --watch --app=transition\" \"tsc -b libs -w\" \"tsc -b source/server -w\" \"nodemon services/server/bin/index.js\"",
        "build": "npm run build-dev",
        "build2": "concurrently \"npm run build-server\" \"npm run build-dev\"",
        "build-dev": "cd source/client; webpack --mode=development --app=all; cd ../..",
        "build-prod": "cd source/client; webpack --mode=production --app=all; cd ../..",
        "build-server": "tsc -b source/server",
        "build-libs": "tsc -b libs",
        "build-core": "tsc -p libs/ff-core/tsconfig.module.json",
        "build-graph": "tsc -p libs/ff-graph/tsconfig.module.json",
        "build-browser": "tsc -p libs/ff-browser/tsconfig.module.json",
        "build-ui": "tsc -p libs/ff-ui/tsconfig.module.json",
        "build-react": "tsc -p libs/ff-react/tsconfig.module.json",
        "build-three": "tsc -p libs/ff-three/tsconfig.module.json",
        "build-scene": "tsc -p libs/ff-scene/tsconfig.module.json",
        "doc": "typedoc --name \"Smithsonian Voyager\" --exclude \"**/node_modules/**\" --ignoreCompilerErrors --mode file --target ES6 --theme minimal --out doc/code/ source/",
        "test": "npm run test-core; npm run test-graph;",
        "test-core": "tsc -b libs/ff-core/tsconfig.test.json; mocha -c --ui tdd node_modules/@ff/test/core/test.js || exit 0",
        "test-graph": "tsc -b libs/ff-graph/tsconfig.test.json; mocha -c --ui tdd node_modules/@ff/test/graph/test.js || exit 0",
        "up": "docker-compose up -d; docker-compose logs -f",
        "down": "docker-compose stop; docker-compose rm -f -v",
        "restart": "docker-compose stop; docker-compose rm -f -v; docker-compose up -d; docker-compose logs -f",
        "bash": "docker-compose exec server bash"
    },
    "nodemonConfig": {
        "delay": "1000",
        "watch": [
            "services/server/bin",
            "node_modules/@ff"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/framelab/ff-foundation.git"
    },
    "keywords": [
        "typescript",
        "react"
    ],
    "author": {
        "name": "Ralph Wiedemeier",
        "url": "https://about.me/ralphw"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/framelab/ff-foundation/issues"
    },
    "homepage": "https://github.com/framelab/ff-foundation#readme",
    "dependencies": {
        "benchmark": "^2.1.4",
        "body-parser": "^1.18.3",
        "cookie-parser": "^1.4.4",
        "express": "^4.16.4",
        "express-handlebars": "^3.0.2",
        "express-session": "^1.16.1",
        "lit-element": "^2.1.0",
        "lit-html": "^1.0.0",
        "moment": "^2.24.0",
        "morgan": "^1.9.1",
        "nodemon": "^1.18.11",
        "platform": "^1.3.5",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "resolve-pathname": "^3.0.0",
        "source-map-support": "^0.5.12",
        "three": "^0.103.0",
        "xml-js": "^1.6.11"
    },
    "devDependencies": {
        "@types/benchmark": "^1.0.31",
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.6",
        "@types/node": "^11.13.5",
        "@types/react": "^16.8.13",
        "@types/react-dom": "^16.8.4",
        "awesome-typescript-loader": "^5.2.1",
        "chai": "^4.2.0",
        "concurrently": "^4.1.0",
        "css-loader": "^1.0.1",
        "handlebars-loader": "^1.7.1",
        "html-webpack-plugin": "^3.2.0",
        "mini-css-extract-plugin": "^0.6.0",
        "mocha": "^6.1.4",
        "node-sass": "^4.11.0",
        "optimize-css-assets-webpack-plugin": "^5.0.1",
        "raw-loader": "^2.0.0",
        "sass-loader": "^7.1.0",
        "source-map-loader": "^0.2.4",
        "terser-webpack-plugin": "^1.2.3",
        "typedoc": "^0.14.2",
        "typescript": "^3.4.4",
        "typescript-json-schema": "^0.37.0",
        "typescript-lit-html-plugin": "^0.9.0",
        "uglify-js": "^3.5.5",
        "webpack": "^4.30.0",
        "webpack-cli": "^3.3.0",
        "webpack-dev-middleware": "^3.6.2",
        "webpack-log": "^2.0.0"
    }
}
