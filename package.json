{
    "name": "ff-foundation",
    "version": "1.0.0",
    "description": "FF Typescript Foundation Library",
    "scripts": {
        "start": "npm run server",
        "server": "nodemon services/server/bin/index.js",
        "watch": "concurrently \"cd source/client && webpack --watch --config webpack.dev.js\" \"tsc -b source/server -w\" \"nodemon services/server/bin/index.js\"",
        "build": "concurrently \"npm run build-server\" \"npm run build-client\"",
        "build-client": "cd source/client && webpack --config webpack.prod.js && cd ../..",
        "build-server": "tsc -b source/server",
        "build-libs": "npm run build-core; npm run build-ui; npm run build-react; npm run build-browser",
        "build-core": "tsc -p libs/ff-core/source --outDir node_modules/@ff/core",
        "build-ui": "tsc -p libs/ff-ui/source --outDir node_modules/@ff/ui",
        "build-react": "tsc -p libs/ff-react/source --outDir node_modules/@ff/react",
        "build-browser": "tsc -p libs/ff-browser/source --outDir node_modules/@ff/browser",
        "doc": "npm run build-libs; npm run doc-only",
        "doc-only": "typedoc --name \"FF Typescript Foundation Library\" --theme minimal --includeDeclarations --ignoreCompilerErrors --excludePrivate --excludeExternals --mode file --target ES6 --jsx react --out doc/ node_modules/@ff"
    },
    "nodemonConfig": {
        "delay": "1000",
        "watch": [
            "services/server/bin",
            "node_modules/@ff"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/framelab/ff-foundation.git"
    },
    "keywords": [
        "typescript",
        "react"
    ],
    "author": {
        "name": "Ralph Wiedemeier",
        "url": "https://about.me/ralphw"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/framelab/ff-foundation/issues"
    },
    "homepage": "https://github.com/framelab/ff-foundation#readme",
    "dependencies": {
        "@polymer/lit-element": "^0.6.3",
        "@webcomponents/webcomponentsjs": "^2.2.0",
        "body-parser": "^1.18.3",
        "cookie-parser": "^1.4.3",
        "express": "^4.16.4",
        "express-handlebars": "^3.0.0",
        "express-session": "^1.15.6",
        "morgan": "^1.9.1",
        "nodemon": "^1.18.6",
        "react": "^16.6.3",
        "react-dom": "^16.6.3",
        "three": "^0.98.0"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.12.9",
        "@types/react": "^16.4.7",
        "@types/react-dom": "^16.0.9",
        "@types/three": "^0.93.10",
        "awesome-typescript-loader": "^5.2.1",
        "chai": "^4.2.0",
        "concurrently": "^4.1.0",
        "css-loader": "^1.0.1",
        "mini-css-extract-plugin": "^0.4.4",
        "mocha": "^5.2.0",
        "node-sass": "^4.10.0",
        "raw-loader": "^0.5.1",
        "sass-loader": "^7.1.0",
        "source-map-loader": "^0.2.4",
        "typedoc": "^0.13.0",
        "typescript": "^3.1.6",
        "typescript-lit-html-plugin": "^0.9.0",
        "uglify-js": "^3.4.9",
        "webpack": "^4.25.1",
        "webpack-cli": "^3.1.2",
        "webpack-merge": "^4.1.4"
    }
}
